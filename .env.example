# Copy to `.env` and fill values. Never commit your real `.env`.

# Gateway UI token. Used to access:
#   https://<host>:18789/?token=<OPENCLAW_GATEWAY_TOKEN>
OPENCLAW_GATEWAY_TOKEN=change-me

# VoiceMonkey (Alexa announcements)
VOICEMONKEY_TOKEN=
VOICEMONKEY_DEVICE=cozinha

# Home Assistant
HOMEASSISTANT_URL=http://homeassistant:8123/
HOMEASSISTANT_TOKEN=

# Google Calendar (direct OAuth)
GCAL_CLIENT_ID=
GCAL_CLIENT_SECRET=
GCAL_AUTH_MODE=localserver
GCAL_OAUTH_HOST=localhost
GCAL_OAUTH_PORT=8765
GCAL_CALENDAR_ID=primary

# Azure Speech (online TTS)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=brazilsouth
AZURE_SPEECH_VOICE=pt-BR-BrendaNeural
# Azure SSML prosody rate (e.g. -10%, +17%, 1.2x depending on API)
AZURE_SPEECH_RATE=+17%
MAX_CHARS_PER_CHUNK=900

